<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>IniciarSesion</servlet-name>
        <servlet-class>com.controlador.IniciarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcesarDepartamento</servlet-name>
        <servlet-class>com.controlador.ProcesarDepartamento</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcesarHabilidad</servlet-name>
        <servlet-class>com.controlador.ProcesarHabilidad</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcesarPais</servlet-name>
        <servlet-class>com.controlador.ProcesarPais</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IniciarSesion</servlet-name>
        <url-pattern>/iniciarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcesarDepartamento</servlet-name>
        <url-pattern>/jsp/gestionar/procesarDepartamento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcesarHabilidad</servlet-name>
        <url-pattern>/jsp/gestionar/procesarHabilidad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcesarPais</servlet-name>
        <url-pattern>/jsp/gestionar/procesarPais</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
